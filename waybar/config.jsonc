{
  "layer": "bottom",
  "position": "top",
  "height": 40,
  "spacing": 2,
  "exclusive": true,
  "gtk-layer-shell": true,
  "passthrough": false,
  "fixed-center": true,
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": [
    "clock#simpleclock",
  ],
  "modules-right": [
    "cpu",
    "memory",
    "pulseaudio",
    "clock",
    "tray",
    "custom/power",
    "battery",
  ],
  "battery": {
    "format": "{capacity}% {icon}",
    "format-alt": "{capacity}% {icon}",
    "icon": {
        "charging": "‚ö°",
        "discharging": "üîã",
        "full": "üîã",
        "empty": "üîã"
    },
  },
  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{id}",
    "all-outputs": true,
    "disable-scroll": false,
    "active-only": false,
  },
  "hyprland/window": {
    "format": "{title}",
  },
  "tray": {
    "show-passive-items": true,
    "spacing": 10,
  },
  "clock#simpleclock": {
    "tooltip": false,
    "format": "ÔÄó {:%H:%M}",
  },
  "clock": {
    "format": "ÔÅ≥ {:L%a %d %b}",
    "calendar": {
      "format": {
        "days": "<span weight='normal'>{}</span>",
        "months": "<span color='#cdd6f4'><b>{}</b></span>",
        "today": "<span color='#f38ba8' weight='700'><u>{}</u></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "weeks": "<span color='#a6e3a1'><b>W{}</b></span>",
      },
      "mode": "month",
      "mode-mon-col": 1,
      "on-scroll": 1,
    },
    "tooltip-format": "<span color='#cdd6f4' font='Lexend 16'><tt><small>{calendar}</small></tt></span>",
  },
  "cpu": {
    "format": "Ôãõ {usage}%",
    "tooltip": true,
    "interval": 1,
  },
  "memory": {
    "format": "ÓøÖ {used:0.1f}Gi",
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶  muted",
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "],
    },
    "on-click": "pavucontrol",
  },
  "custom/sep": {
    "format": "|",
    "tooltip": false,
  },
  "custom/power": {
    "tooltip": false,
    "on-click": "wlogout -p layer-shell &",
    "format": "‚èª",
  },
}
